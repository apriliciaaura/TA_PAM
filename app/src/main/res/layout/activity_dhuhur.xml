<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8BFD8"
    tools:context=".Dhuhur">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/masjidjadwal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/balik">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back">
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malang"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#ffffff"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indonesia"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"></TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginTop="30dp"
        >
        <HorizontalScrollView
            android:scrollbarSize="0dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jadwal Sholat"
                            android:gravity="center_horizontal"
                            android:textSize="20dp"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shubuh"
                            android:textSize="17dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:textStyle="bold|italic"
                            android:layout_marginBottom="10dp"
                            >
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#696969"></LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="waktu"
                            android:textSize="23dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:id="@+id/waktu_dhuhur"
                            android:textStyle="bold|italic"
                            android:layout_marginBottom="10dp"
                            >
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#696969"></LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masjid Al-Ikhlas"
                            android:textSize="17dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold|italic"
                            android:layout_marginBottom="10dp"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Geser"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="60dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ubah Data"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhuhur"
                        android:textSize="17dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold|italic"
                        android:layout_marginBottom="10dp"
                        >
                    </TextView>
                    <EditText
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:hint="Waktu"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/waktudhuhur"></EditText>
                    <Button
                        android:background="#D8BFD8"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/simpan"
                        android:text="Simpan"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>