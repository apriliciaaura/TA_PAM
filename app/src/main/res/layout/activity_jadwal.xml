<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8BFD8"
    tools:context=".Jadwal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/masjidjadwal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/balik">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back">
                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Sholat"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malang"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#ffffff"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indonesia"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-40dp"
            android:layout_width="330dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/today"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Hari Ini">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01 Maret 2020"></TextView>
            </LinearLayout>
            </LinearLayout>
        <TableLayout
            android:layout_width="330dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TableRow
                android:background="#D8BFD8"
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Shubuh"
                        android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/shubuh"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Dhuha"
                    android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/dhuha"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>

            <TableRow
                android:background="#D8BFD8"
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Dhuhur"
                    android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/dhuhur"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Ashar"
                    android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/ashar"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>

            <TableRow
                android:background="#D8BFD8"
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Maghrib"
                    android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/maghrib"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>

            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Isya"
                    android:layout_gravity="center_vertical" >
                </TextView>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:id="@+id/txt5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iya"></ImageView>
                <ImageView
                    android:id="@+id/isya"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"></ImageView>
            </TableRow>
        </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>